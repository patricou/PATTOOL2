<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot default configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console Appender with explicit UTF-8 encoding -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- File Appender with explicit UTF-8 encoding (if file logging is needed) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/spring.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/spring.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <!-- Application specific loggers -->
    <logger name="com.pat" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.mongodb.driver" level="INFO"/>
    
    <!-- Suppress stack traces for connection abort exceptions (normal client disconnections) -->
    <!-- These exceptions are normal when clients close connections and don't need stack traces -->
    <logger name="org.apache.catalina.connector" level="WARN"/>
    <logger name="org.springframework.web.servlet.mvc.method.annotation" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>
    
    <!-- Filter to suppress stack traces for connection abort exceptions -->
    <turboFilter class="ch.qos.logback.classic.turbo.DuplicateMessageFilter">
        <allowedRepetitions>1</allowedRepetitions>
    </turboFilter>
</configuration>

